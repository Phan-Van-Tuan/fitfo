<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_background_color"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgDisplayStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/i" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imgDisplayAvtStory"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/a_logo_white" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtDisplayNameStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:maxLength="30"
            android:textStyle="bold"
            android:shadowColor="@color/text_40"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="20"
            android:text="User name" />

        <ImageView
            android:id="@+id/optionStory"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/optionw"
            android:padding="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            />

        <ImageView
            android:id="@+id/closeStory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/ic_close" />




</RelativeLayout>