<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_width="110dp"
    android:layout_height="210dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="110dp"
        android:layout_height="210dp"
        android:background="@color/black"
        app:cardCornerRadius="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_of_story"
            android:layout_width="110dp"
            android:layout_height="210dp"
            android:background="@color/black"
            android:src="@drawable/i" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/avatar_user_of_story"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/a_logo_white" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_user_of_story"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:text="User name"
        android:textColor="@color/white"
        android:shadowColor="@color/text_40"
        android:shadowDx="2"
        android:shadowDy="2"
        android:gravity="bottom"
        android:shadowRadius="4"
        android:textSize="15sp"
        android:textStyle="bold"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView9"
        app:layout_constraintStart_toStartOf="@+id/cardView9" />

</androidx.constraintlayout.widget.ConstraintLayout>